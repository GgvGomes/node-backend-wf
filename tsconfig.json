{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    "emitDecoratorMetadata": true,

    "experimentalDecorators": true
  }
}
